{
    "openapi": "3.0.0",
    "info": {
        "version": "1.0.0",
        "title": "CSV conversion",
        "description": "converts the csv file with python library"
    },
    "servers": [
        {
            "url": "http://localhost:3000"
        }
    ],
    "paths": {
        "/convert/file": {
            "post": {
                "description": "convert the given csv file",
                "requestBody": {
                    "content": {
                        "multipart/form-data": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "file": {
                                        "type": "string",
                                        "format": "binary"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "success response with file name",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/convertsuccess"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "failure response",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/convertfailure"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/convert/file/{filename}": {
            "get": {
                "description": "get converted csv file",
                "parameters": [
                    {
                        "in": "path",
                        "name": "filename",
                        "schema": {
                            "type": "string"
                        },
                        "required": true,
                        "description": "filename which was received after successfully converting the data"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "success response with converted file",
                        "content": {
                            "text/csv": {
                                "schema": {
                                    "type": "string"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "failure response",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "error": {
                                            "type": "string",
                                            "description": "Error message."
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "convertsuccess": {
                "type": "object",
                "properties": {
                    "filename": {
                        "type": "string"
                    },
                    "data": {
                        "type": "string",
                        "description": "Response value."
                    }
                }
            },
            "convertfailure": {
                "type" : "object",
                "properties": {
                    "data": {
                        "type": "string",
                        "description": "Error message."
                    }
                }
            }
        }
    }
}